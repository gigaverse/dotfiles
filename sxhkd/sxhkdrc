# Basic binds
super + Return
	$TERMINAL
super + r
	rofi -show run
super + f
	$TERMINAL -e $FILE
super + e
	$TERMINAL -e neomutt
super + m
	$TERMINAL -e ncmpcpp
super + n
	$TERMINAL -e newsboat
super + i
	$TERMINAL -e htop
super + slash
	pkill -USR1 redshift
#super + y
#	$TERMINAL -e calcurse
super + shift + a
	$TERMINAL -e pulsemixer
super + shift + c
	camtoggle
super + shift + e
	tutorialvids
super + w
	$BROWSER
super + shift + g
	gimp
super + q
	kill
super + shift + q
	xkill

# Et cetera...
super + grave
	dmenuunicode
super + Scroll_Lock
	killall screenkey || screenkey
super + Insert
	showclip
super + shift + x
	prompt "Shutdown computer?" "sudo -A shutdown -h now"
super + shift + BackSpace
	prompt "Reboot computer?" "sudo -A shutdown -r now"
super + x
	mpc pause; pauseallmpv; i3lock -e -f -c 1d2021; xset dpms force off
XF86Launch1
	xset dpms force off

# Recording
# Take screenshot
Print
	maim ~/Screenshot/pic-full-$(date '+%y%m%d-%H%M-%S').png
# Pick screenshot type
shift + Print
	maimpick
# Record audio or video
super + Print
	dmenurecord
# kill active recording
super + Delete
	dmenurecord kill
# Pause audio
super + Down
	lmc toggle
# Changes to next/previous tracks
super + {Left,Right}
	lmc {prev,next}
# Restart track
super + Up
	lmc replay
# Increase volume
super + {equal,plus}
	mc up {5,15}
# Decrease volume
super {_,shift +} + minus
	lmc down {5,15}
# Seek foward in song
super + {_,shift +} bracketright
	lmc forward {10,120}
# Seek backward in song
super + {_,shift +} bracketleft
	lmc back {10,120}

# Function keys
# F1-F5 manages workspaces on the second monitor
# Show readme
super + F6
	groff -mom $HOME/.local/share/larbs/readme.mom -Tpdf | zathura -
# Change display
super + F7
	displayselect
	webby | xargs -r $BROWSER
# Start torrent daemon/open interface
super + shift+ F8
	torwrap
# toggle torrent daemon
super + F8
	td-togggle
# sync email
super + F9
	mailsync
# Mount a USB drive or Android device
super + F10
	dmenumount
# Unmount a USB drive or Android device
super + shift F10
	dmenuumount
# Search with Duckduckgo
super + F11
	ducksearch
# Network Manager interface
super + F12
	$TERMINAL -e sudo -A nmtui
# Restart/rescan wifi/eth networks
super + shift + F12
	sudo -A systemctl restart NetworkManager

